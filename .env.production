# ==========================================
# SERVER CONFIGURATION
# ==========================================
NODE_ENV=production
PORT=3000
API_PREFIX=api/v1

# ==========================================
# CORS CONFIGURATION
# ==========================================
# Comma-separated list of allowed origins
# IMPORTANT: Update these with your production domains
CORS_ORIGINS=http://localhost:80,https://yourdomain.com

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# DATABASE_HOST is set by docker-compose (postgres service)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=scrum_store
DATABASE_PASSWORD=scrum_store
DATABASE_NAME=scrum_store
# CRITICAL: Set to 'false' in production!
DATABASE_SYNCHRONIZE=false

# ==========================================
# JWT CONFIGURATION
# ==========================================
# CRITICAL: Generate strong secrets for production!
# Use: openssl rand -base64 32
JWT_SECRET=CHANGE-THIS-SECRET-IN-PRODUCTION-USE-OPENSSL-RAND-BASE64-32
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=CHANGE-THIS-REFRESH-SECRET-IN-PRODUCTION-USE-OPENSSL-RAND-BASE64-32
REFRESH_TOKEN_EXPIRES_IN=7d

# ==========================================
# RATE LIMITING
# ==========================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100
